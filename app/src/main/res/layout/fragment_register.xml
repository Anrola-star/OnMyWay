<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context="Fragments.RegisterFragment">

    <!-- 主内容滚动容器，适配小屏幕 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:maxWidth="500dp"
            android:paddingVertical="40dp">

            <!-- 注册标题区域 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="账号注册"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="填写以下信息完成注册"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- 手机号输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="手机号">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fr_et_register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingVertical="12dp"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 验证码输入行（输入框 + 获取验证码按钮） -->

            <!-- 密码输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="设置密码"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fr_et_register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingVertical="12dp"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 确认密码输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="确认密码"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fr_et_register_pwd_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingVertical="12dp"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 隐私协议勾选区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/fr_cb_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2196F3" />

                <!-- 协议文本-->
                <TextView
                    android:id="@+id/fr_tv_agreement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我已阅读并同意用户协议"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:linksClickable="true" />
            </LinearLayout>

            <!-- 注册按钮 -->
            <Button
                android:id="@+id/fr_btn_register"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#2196F3"
                android:text="完成注册"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 已有账号？返回登录 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有账号？"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fr_tv_go_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="立即登录"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部版权信息 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="2025 OnMyWay 锐意制作"
        android:textColor="#999999"
        android:textSize="12sp" />

</FrameLayout>