<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 顶部用户信息栏（卡片式） -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- 头像 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mf_iv_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_default_avatar"
                android:scaleType="centerCrop"
                android:layout_marginRight="16dp"/>

            <!-- 昵称+骑手ID -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mf_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="骑手名"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mf_tv_rider_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="骑手ID：111111"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 修改信息按钮 -->
            <TextView
                android:id="@+id/mf_tv_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改信息"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 骑手收益总结模块 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="骑手收益总结"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            <!-- 本周/本月切换按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:orientation="horizontal"
                android:padding="2dp"
                android:radius="8dp"
                app:cornerRadius="8dp">

                <TextView
                    android:id="@+id/mf_tv_week"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="本周"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:layout_margin="1dp"
                    android:radius="6dp"/>

                <TextView
                    android:id="@+id/mf_tv_month"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="本月"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:background="#F0F0F0"
                    android:layout_margin="1dp"
                    android:radius="6dp"/>
            </LinearLayout>

            <!-- 收益统计（横向排列） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 今日收益 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mf_tv_today_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥89.50"
                        android:textSize="20sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日收益"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 本月收益 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mf_tv_month_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥2568.80"
                        android:textSize="20sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月收益"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 总收益 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mf_tv_total_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥18956.30"
                        android:textSize="20sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计收益"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 收益折线图 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/mf_income_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 功能按钮列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">



        <TextView
            android:id="@+id/mf_tv_my_income_detail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="按钮"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mf_tv_my_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="按钮"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- 退出登录按钮 -->
        <Button
            android:id="@+id/mf_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FF5252"
            android:text="退出登录"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

</LinearLayout>