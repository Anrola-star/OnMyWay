<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical">

    <!-- 顶部操作栏：接单设置 + 在线状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <!-- 接单设置按钮 -->
        <Button
            android:id="@+id/fo_btn_order_setting"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#2196F3"
            android:text="接单设置"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- 在线状态开关 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单状态"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/fo_switch_online"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:checked="true"
                app:thumbTint="#2196F3"
                app:trackTint="#E0E0E0"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 分类标签：待接单/已接单 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_order_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#2196F3"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="#666666"
        app:tabSelectedTextColor="#2196F3">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待接单"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已接单"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- 筛选栏：排序方式 + 筛选按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排序："
            android:textColor="#333333"
            android:textSize="14sp"/>

        <!-- 排序下拉选择器 -->
        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/fo_selector_spinner_bg"
            android:paddingHorizontal="8dp"
            android:entries="@array/fo_order_sort_type"
            android:popupBackground="#FFFFFF"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- 更多筛选按钮 -->
        <TextView
            android:id="@+id/fo_tv_more_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多筛选 ▼"
            android:textColor="#2196F3"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 订单列表容器（ViewPager2 承载待接单/已接单列表） -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_order_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

</LinearLayout>