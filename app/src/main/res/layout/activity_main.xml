<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Fragment 容器 -->
    <FrameLayout
        android:id="@+id/ma_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- 底部导航栏 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ma_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:background="#FFFFFF"
        app:elevation="8dp"
        app:itemIconTint="@color/ma_bottom_nav_color_selector"
        app:itemTextColor="@color/ma_bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/ma_menu_bottom_nav"></com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>